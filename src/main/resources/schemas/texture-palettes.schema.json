{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mosberg.github.io/schemas/generator/texture-palettes.schema.json",
  "title": "Texture Palettes",
  "description": "Extracted per-texture palette/group data used by recolor tooling.",
  "type": "object",
  "required": ["schema", "items"],
  "properties": {
    "schema": { "const": "texture-palettes" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "id", "name", "groups"],
        "properties": {
          "path": { "$ref": "common.schema.json#/$defs/texturePngPath" },
          "id": { "$ref": "common.schema.json#/$defs/snakeId" },
          "name": { "type": "string", "minLength": 1, "maxLength": 128 },
          "groups": {
            "type": "object",
            "minProperties": 1,
            "description": "Category -> array of [color, weightOrMapping].",
            "propertyNames": {
              "$ref": "common.schema.json#/$defs/categoryId"
            },
            "additionalProperties": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "array",
                "prefixItems": [
                  { "$ref": "common.schema.json#/$defs/hex6" },
                  { "$ref": "common.schema.json#/$defs/weightOrMapping" }
                ],
                "items": false,
                "minItems": 2,
                "maxItems": 2
              }
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "unevaluatedProperties": false
}
