{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mosberg.github.io/schemas/generator/palette-map.schema.json",
  "title": "Palette Map",
  "description": "Color map used for recoloring textures.",
  "type": "object",
  "required": ["schema", "id", "map"],
  "properties": {
    "schema": { "const": "palette-map" },
    "id": { "$ref": "common.schema.json#/$defs/snakeId" },
    "name": { "type": "string", "minLength": 1, "maxLength": 128 },

    "map": {
      "type": "array",
      "minItems": 1,
      "maxItems": 256,
      "items": {
        "type": "array",
        "prefixItems": [
          { "$ref": "common.schema.json#/$defs/hex6" },
          { "$ref": "common.schema.json#/$defs/hex6" }
        ],
        "items": false,
        "minItems": 2,
        "maxItems": 2
      }
    },

    "post": {
      "type": "object",
      "description": "Optional post adjustments.",
      "properties": {
        "contrast": { "type": "number", "minimum": 0.0, "maximum": 3.0 },
        "brightness": { "type": "number", "minimum": -1.0, "maximum": 1.0 },
        "saturation": { "type": "number", "minimum": 0.0, "maximum": 3.0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "unevaluatedProperties": false
}
